@model IEnumerable<LeaveManagement.Models.Leave>

<h2>Manage Leave Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Employee Name</th>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.UserId</td>
                <td>@leave.UserName</td>
                <td>@leave.LeaveType</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Status</td>
                <td>
                    <form asp-action="ApproveLeaveRequest" asp-route-id="@leave.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectLeaveRequest" asp-route-id="@leave.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Users")" class="btn btn-secondary mb-3">Back to Users</a>
