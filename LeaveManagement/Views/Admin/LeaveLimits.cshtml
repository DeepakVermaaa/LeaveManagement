@model IEnumerable<LeaveManagement.Models.LeaveLimit>

<h2>Manage Leave Limits</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Leave Type</th>
            <th>Max Days</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var limit in Model)
        {
            <tr>
                <td>@limit.LeaveType</td>
                <td>@limit.MaxDays</td>
                <td>
                    <a asp-action="DeleteLimit" asp-route-id="@limit.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h3>Edit Leave Limit</h3>
<form asp-action="AddLimit" method="post">
    <div class="form-group">
        <label for="leaveType">Leave Type:</label>
        <select id="leaveType" name="leaveType" class="form-control" required>
            <option value="Paid">Paid Leave</option>
            <option value="Sick">Sick Leave</option>
            <option value="Vacation">Vacation Leave</option>
        </select>
    </div>
    <div class="form-group">
        <label for="maxDays">Max Days:</label>
        <input type="number" id="maxDays" name="maxDays" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success" style="margin-top:20px">Update Limit</button>
</form>

<a href="@Url.Action("Users", "Admin")" class="btn btn-secondary" style="margin-top:20px">Back to User Management</a>
